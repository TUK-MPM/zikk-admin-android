<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="4dp">

    <TextView
        android:id="@+id/item_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 보기"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="승인만 보기"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_processing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="처리중만 보기"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/item_rejected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반려만 보기"
        android:textSize="12sp"
        android:padding="8dp"
        android:textColor="@color/black" />

</LinearLayout>
