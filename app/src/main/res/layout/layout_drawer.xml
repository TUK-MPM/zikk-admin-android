<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_bg_blue"
    android:orientation="vertical"
    android:paddingTop="48dp"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ZIKK"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="시흥시 개인형 이동장치 신고 앱" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_report_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_button_first"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:drawableTint="@color/black"
                android:padding="16dp"
                android:text="신고건 처리"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:rippleColor="@color/light_gray" />

            <Button
                android:id="@+id/btn_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_button"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:drawableTint="@color/black"
                android:includeFontPadding="false"
                android:padding="16dp"
                android:text="공지사항"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="0dp"
                app:rippleColor="@color/light_gray" />

            <Button
                android:id="@+id/btn_report_query"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/list_button_last"
                android:drawableEnd="@drawable/baseline_chevron_right_24"
                android:drawableTint="@color/black"
                android:includeFontPadding="false"
                android:padding="16dp"
                android:text="문의사항"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                app:backgroundTint="@color/white"
                app:rippleColor="@color/light_gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_background" />
    </LinearLayout>
</LinearLayout>
